<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/ic_gradient_background">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="188dp"
        android:layout_height="22dp"
        android:fontFamily="@font/aladin"
        android:text="Fusion of Taste, Delivered Fast"
        android:textColor="@color/yellow"
        android:textColorLink="#CB3333"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/paswordofRestaurantEditText"
        android:layout_width="365dp"
        android:layout_height="57dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/password_lock"
        android:drawablePadding="15dp"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/darkGrey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mailofRestaurantEditText" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/locationTextInputLayout"
        android:layout_width="365dp"
        android:layout_height="57dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edittextshape"
        android:elevation="8dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        app:endIconDrawable="@drawable/arrow_circle_down"
        app:endIconMode="dropdown_menu"
        app:errorEnabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <AutoCompleteTextView
            android:id="@+id/ListOfLocation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/acme"
            android:hint="Choose Location"
            android:inputType="none"
            android:visibility="visible" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/mailofRestaurantEditText"
        android:layout_width="365dp"
        android:layout_height="57dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/mail_icon"
        android:drawablePadding="15dp"
        android:elevation="8dp"
        android:inputType="textEmailAddress"
        android:hint="Email or Phone Number"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameofRestaurantEditText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/createAccountButtonAdmin"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/red_button"
        android:text="Create Account"
        android:elevation="8dp"
        android:textColor="@color/white"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/paswordofRestaurantEditText" />

    <EditText
        android:id="@+id/nameofRestaurantEditText"
        android:layout_width="365dp"
        android:layout_height="57dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/home_02"
        android:drawablePadding="15dp"
        android:elevation="8dp"
        android:hint="Name of the Restaurant"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:textColorHint="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameEditText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:elevation="8dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="SignUp Here for Your \n Admin Dashboard"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="365dp"
        android:layout_height="57dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittextshape"
        android:drawableLeft="@drawable/name"
        android:drawablePadding="15dp"
        android:elevation="8dp"
        android:hint="Name of the Owner"
        android:paddingLeft="15dp"
        android:textColor="@color/black"
        android:inputType="text"
        android:textColorHint="@color/darkGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locationTextInputLayout" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aladin"
        android:text="Food Fusion"
        android:textColor="@color/white"
        android:elevation="8dp"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/AlreadyHaveAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already Have An Account?"
        android:textColor="#87CEFA"
        android:elevation="8dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@id/createAccountButtonAdmin"
        app:layout_constraintLeft_toLeftOf="@id/createAccountButtonAdmin"
        app:layout_constraintRight_toRightOf="@id/createAccountButtonAdmin"/>



</androidx.constraintlayout.widget.ConstraintLayout>