<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/white">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fitsSystemWindows="true"
            android:background="@color/white">

            <ImageButton
                android:id="@+id/AddItemBackButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/arrow_left"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:background="@android:color/transparent"
                app:tint="@color/red" />

            <TextView
                android:id="@+id/AddItemText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Item"
                android:fontFamily="@font/acme"
                android:textSize="30sp"
                android:textColor="@color/red"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/AddItemNameLinearLayout"
                android:layout_width="355dp"
                android:layout_height="59dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AddItemText"
                android:layout_marginTop="25dp"
                android:background="@drawable/edittextshape"
                android:elevation="5dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name"
                    android:fontFamily="@font/abhaya_libre"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ItemNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:hint="Enter the Name...."
                    android:textColorHint="@color/darkGrey"
                    android:inputType="text"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/AddItemPriceLinearLayout"
                android:layout_width="355dp"
                android:layout_height="59dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AddItemNameLinearLayout"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:elevation="5dp"
                android:paddingRight="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Price"
                    android:fontFamily="@font/abhaya_libre"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/ItemPriceEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:hint="Enter the Price...."
                    android:padding="5dp"
                    android:textColorHint="@color/darkGrey"
                    android:inputType="text"/>

            </LinearLayout>

            <TextView
                android:id="@+id/AddItemImageTextView"
                android:layout_width="355dp"
                android:layout_height="59dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:drawableRight="@drawable/plusicon"
                android:elevation="5dp"
                android:fontFamily="@font/abhaya_libre"
                android:gravity="center_vertical"
                android:padding="20dp"
                android:text="Item Image"
                android:textColor="@color/black"
                android:textColorHint="@color/darkGrey"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/AddItemPriceLinearLayout"
                app:layout_constraintTop_toBottomOf="@+id/AddItemPriceLinearLayout" />

            <androidx.cardview.widget.CardView
                android:id="@+id/AddItemImageCardView"
                android:layout_width="190dp"
                android:layout_height="130dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp"
                app:layout_constraintTop_toBottomOf="@id/AddItemImageTextView"
                app:layout_constraintLeft_toLeftOf="@id/AddItemImageTextView"
                app:layout_constraintRight_toRightOf="@id/AddItemImageTextView">

                <ImageView
                    android:id="@+id/AddItemImageImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/pizza_pic" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/AddShortDescriptionLinearLayout"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AddItemImageCardView"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:elevation="5dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Short Description"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/abhaya_libre"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/AddItemShortDescriptionEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey"
                    android:textAlignment="inherit"
                    android:hint="add description here..."
                    android:inputType="textMultiLine"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/AddItemIngredientsLinearLayout"
                android:layout_width="355dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/AddShortDescriptionLinearLayout"
                android:layout_marginTop="16dp"
                android:background="@drawable/edittextshape"
                android:focusable="true"
                android:elevation="5dp"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients"
                    android:padding="5dp"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/abhaya_libre"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <EditText
                    android:padding="10dp"
                    android:id="@+id/AddItemIngredientsEditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textColorHint="@color/darkGrey"
                    android:hint="add ingredients here..."
                    android:inputType="textMultiLine"/>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/AdditemButton"
                android:layout_width="157dp"
                android:layout_height="57dp"
                app:layout_constraintTop_toBottomOf="@id/AddItemIngredientsLinearLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/red_button"
                android:text="Add Item"
                android:textAllCaps="false"
                android:elevation="8dp"
                android:fontFamily="@font/acme"
                android:textSize="20sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:textColor="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>