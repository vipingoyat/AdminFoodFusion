<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/red">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:elevation="8dp"
        android:outlineSpotShadowColor="@color/yellow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:fontFamily="@font/aladin"
        android:text="Food  Fusion"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="43sp"
        android:elevation="9dp"
        android:shadowColor="@color/black"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="0.349"
        app:layout_constraintLeft_toRightOf="@id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/DashboardCardView"
        android:layout_width="360dp"
        android:layout_height="138dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="95dp"
        app:cardCornerRadius="12dp"
        android:elevation="8dp"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <ImageView
                android:id="@+id/pendingOrderIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/problem_icon"
                android:layout_marginLeft="52dp"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/pendinordertextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/acme"
                android:text="Pending Order"
                android:textColor="@color/red"
                android:textSize="18sp"
                app:layout_constraintLeft_toLeftOf="@id/pendingOrderIcon"
                app:layout_constraintRight_toRightOf="@id/pendingOrderIcon"
                app:layout_constraintTop_toBottomOf="@id/pendingOrderIcon" />
            <ImageView
                android:id="@+id/completedOrderIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/completedicon"
                android:layout_marginLeft="107dp"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toRightOf="@id/pendingOrderIcon"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/acme"
                android:text="Completed \nOrder"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/completedOrderIcon"
                app:layout_constraintStart_toStartOf="@+id/completedOrderIcon"
                app:layout_constraintTop_toBottomOf="@+id/completedOrderIcon" />

            <ImageView
                android:id="@+id/EarningIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/earning_icon"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toRightOf="@id/completedOrderIcon"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/acme"
                android:text="Earning"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="@+id/EarningIcon"
                app:layout_constraintStart_toStartOf="@+id/EarningIcon"
                app:layout_constraintTop_toBottomOf="@+id/EarningIcon" />

            <TextView
                android:id="@+id/PendingOrderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="30"
                android:textColor="@color/red"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/pendinordertextview"
                app:layout_constraintStart_toStartOf="@+id/pendinordertextview"
                app:layout_constraintTop_toBottomOf="@+id/pendinordertextview" />

            <TextView
                android:id="@+id/CompletedOrderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78"
                android:textStyle="bold"
                android:textSize="19sp"
                android:layout_marginTop="12dp"
                android:textColor="@color/green"
                app:layout_constraintEnd_toEndOf="@+id/textView13"
                app:layout_constraintStart_toStartOf="@+id/textView13"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/EarningText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 28,438"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="26dp"
                app:layout_constraintEnd_toEndOf="@+id/textView15"
                app:layout_constraintStart_toStartOf="@+id/textView15"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/AddMenuCardView"
        android:layout_width="150dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/DashboardCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="12dp"
        android:elevation="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="30dp"
        app:cardBackgroundColor="@color/lightred">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/add_svgrepo_com"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="53dp"
            app:tint="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Menu"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="38dp"
            android:textSize="19sp"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/AllItemMenuCardView"
        android:layout_width="150dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/DashboardCardView"
        app:layout_constraintRight_toRightOf="parent"
        app:cardCornerRadius="12dp"
        android:elevation="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="30dp"
        app:cardBackgroundColor="@color/lightred">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/eye_svgrepo_com"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="53dp"
            app:tint="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Item Menu"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="22dp"
            android:textSize="19sp"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/ProfileCardView"
        android:layout_width="150dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/AddMenuCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="12dp"
        android:elevation="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="30dp"
        app:cardBackgroundColor="@color/lightred">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="38dp"
            android:layout_height="38dp"
            app:srcCompat="@drawable/name"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="53dp"
            app:tint="@color/black" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="49dp"
            android:textSize="19sp"
            android:fontFamily="@font/acme"
            android:textColor="@color/black"/>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/CreateNewUserCardView"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="30dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/lightred"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AllItemMenuCardView">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="53dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/addprofile"
            app:tint="@color/black" />

        <TextView
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="54dp"
            android:fontFamily="@font/acme"
            android:text="Create User Menu"
            android:textColor="@color/black"
            android:textSize="19sp" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/LogOutCardView"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="30dp"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/lightred"
        app:cardCornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/CreateNewUserCardView">

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="58dp"
            android:layout_marginTop="11dp"
            app:srcCompat="@drawable/logout_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="54dp"
            android:fontFamily="@font/acme"
            android:text="Log Out"
            android:textColor="@color/red"
            android:textSize="19sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Designed By \nVipin Goyat"
        android:fontFamily="@font/alex_brush"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/OrderDispatchCardView"
        android:layout_width="150dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/ProfileCardView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="12dp"
        android:elevation="10dp"
        android:layout_marginTop="36dp"
        android:layout_marginLeft="30dp"
        app:cardBackgroundColor="@color/lightred">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:srcCompat="@drawable/dispatchbag_icon"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="57dp"
            app:tint="@color/yellow" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Dispatch"
            android:layout_marginTop="54dp"
            android:layout_marginLeft="21dp"
            android:textSize="19sp"
            android:fontFamily="@font/acme"
            android:textColor="@color/yellow" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>